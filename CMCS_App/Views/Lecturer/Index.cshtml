@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Lecturer Dashboard</h2>

    <!-- Submit Claim -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            Submit a New Claim
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="hours" class="form-label">Hours Worked</label>
                    <input type="number" class="form-control" id="hours" placeholder="Enter hours" />
                </div>
                <div class="mb-3">
                    <label for="file" class="form-label">Upload Supporting Document</label>
                    <input type="file" class="form-control" id="file" />
                </div>
                <button type="submit" class="btn btn-success">Submit Claim</button>
            </form>
        </div>
    </div>

    <!-- Claim Status -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            Claim Status
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Hours</th>
                        <th>Status</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>101</td>
                        <td>12</td>
                        <td><span class="badge bg-warning">Pending</span></td>
                        <td>15 Sept 2025</td>
                    </tr>
                    <tr>
                        <td>102</td>
                        <td>8</td>
                        <td><span class="badge bg-success">Approved</span></td>
                        <td>10 Sept 2025</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
